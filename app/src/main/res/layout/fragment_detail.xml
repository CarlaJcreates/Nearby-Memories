<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar sits flush at the top -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Memory Details"
            app:titleCentered="true" />

        <!-- Content wrapper WITH padding -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dTitle"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory title"/>

            <TextView
                android:id="@+id/dCoords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Coords"/>

            <TextView
                android:id="@+id/dContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Contact (tap to open if present)"/>

            <TextView
                android:id="@+id/dWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Weather info"/>

            <ImageView
                android:id="@+id/dImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Memory image" />

            <TextView
                android:id="@+id/dNoImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="No image added"
                android:textStyle="italic"
                android:textColor="#666666"
                android:background="#EEEEEE"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
